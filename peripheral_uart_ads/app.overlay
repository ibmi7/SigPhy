/ {
	aliases {
		ledext0 = &ledext0;
                ledext1 = &ledext1;
                ledext2 = &ledext2;
                ledext3 = &ledext3;
                ledext4 = &ledext4;
                ledext5 = &ledext5;
	};
};

/ {
leds {
      compatible = "gpio-leds";
	ledext0: led_ext0 {
		gpios = <&gpio0 27 GPIO_ACTIVE_LOW>; //d�finir le SPI reset sur le P1.02
		label = "LED EXTERNE 0";
                };
        ledext1: led_ext1 {
        	gpios = <&gpio1 10 GPIO_ACTIVE_LOW>; //d�finir le led externe 1 sur le P1.10
        	label = "LED EXTERNE 1";
                };

        ledext2: led_ext2 {
        	gpios = <&gpio1 11 GPIO_ACTIVE_LOW>;
        	label = "LED EXTERNE 2";
                };

        ledext3: led_ext3 {
        	gpios = <&gpio1 12 GPIO_ACTIVE_LOW>;
        	label = "LED EXTERNE 3";
                };

        ledext4: led_ext4 {
        	gpios = <&gpio1 13 GPIO_ACTIVE_LOW>;
        	label = "LED EXTERNE 4";
                };

        ledext5: led_ext5 {
        	gpios = <&gpio1 14 GPIO_ACTIVE_LOW>;
        	label = "LED EXTERNE 5";
                };
		pinpwdn: pin_pwdn {
			gpios = <&gpio0 26 GPIO_ACTIVE_LOW>; //d�finir le power sur le P1.02
			label = "DREADY";
		};
      };
};

/ {
	zephyr,user {
		/* adjust channel number according to pinmux in board.dts */
		io-channels = <&adc 0>;
	};
};

&adc {
	status = "okay";
};

&uart1 {
	status = "disabled";
};

&pinctrl {
	spi_dummy: spi_dummy {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 0)>,
                <NRF_PSEL(SPIM_MISO, 0, 0)>,
                <NRF_PSEL(SPIM_MOSI, 0, 0)>;
        };
    };
};

&spi2 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi_master_default>;
};

&gpio0 {
	status = "okay";
	label = "GPIO_0";
};

&pinctrl {
	spi_master_default: spi_master_default {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK, 0, 6)>,
					<NRF_PSEL(SPIM_MOSI, 0, 7)>,
					<NRF_PSEL(SPIM_MISO, 0, 25)>;
		};
	};

	spi_master_sleep: spi_master_sleep {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK, 0, 6)>,
					<NRF_PSEL(SPIM_MOSI, 0, 7)>,
					<NRF_PSEL(SPIM_MISO, 0, 25)>;
			low-power-enable;
		};
	};
};

my_spi_master: &spi4 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	pinctrl-0 = <&spi_master_default>;
	pinctrl-1 = <&spi_master_sleep>;
	cs-gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
	reg_my_spi_master:  spi-dev-a@0 {
		reg = <0>;
	};
};



/ {
	chosen {
		nordic,nus-uart = &uart0;
	};
};